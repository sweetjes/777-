{
  "name": "npm-automation-env",
  "version": "1.0.9",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "validate-css": "src/css/style.css",
    "jshint": "src/"
  },
  "scripts": {
    "server": "live-server src",
    "validate-html": "html-validate src",
    "validate-css": "css-validator src/css/style.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "dev-mode": "npm-run-all --parallel server watch",
    "postinstall": "npm i -g live-server css-validator html-validate jshint"
  },
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0"
  }
}
